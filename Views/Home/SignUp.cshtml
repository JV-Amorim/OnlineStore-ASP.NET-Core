@model Customer
@{
    ViewData["Title"] = "SignUp";
}

<!-- TODO - This form will be changed to attend a new Controller. -->
<form asp-action="SignUp" asp-controller="Home" method="post">
    <main role="main">
        <section class="container" style="margin-top: 50px">
            <div class="row">
                <aside class="col-sm-6">
                    <div id="code_register_1">
                        <div class="card">
                            <header class="card-header">
                                <!-- TODO - This link will be changed to attend a new Controller. -->
                                <a asp-controller="Home" asp-action="Login" class="float-right btn btn-outline-primary mt-1">Log in</a>
                                <h4 class="card-title mt-2">Sign Up</h4>
                            </header>
                            <article class="card-body">
                                @if(TempData["MSG_OK"] != null)
                                {
                                    <p class="alert alert-success">@Html.Raw(TempData["MSG_OK"])</p>
                                }
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="Name">Name</label>
                                        <input type="text" asp-for="Name" class="form-control" placeholder="">
                                        <span asp-validation-for="Name"></span>
                                    </div>
                                    <div class="col form-group">
                                        <label asp-for="DateOfBirth">Date of Birth</label>
                                        <input type="date" asp-for="DateOfBirth" class="form-control" placeholder="">
                                        <span asp-validation-for="DateOfBirth"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Sex" value="M">
                                        <span class="form-check-label"> Male </span>
                                    </label>
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Sex" value="F">
                                        <span class="form-check-label"> Female</span>
                                    </label>
                                    <span asp-validation-for="Sex"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CPF">CPF</label>
                                    <input type="number" asp-for="CPF" class="form-control" placeholder="">
                                    <span asp-validation-for="CPF"></span>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="Phone">Phone Number</label>
                                        <input type="number" asp-for="Phone" class="form-control">
                                        <span asp-validation-for="Phone"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email">Email</label>
                                    <input type="email" asp-for="Email" class="form-control" placeholder="">
                                    <span asp-validation-for="Email"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for="Password" class="form-control" type="password">
                                    <span asp-validation-for="Password"></span>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block"> Sign Up </button>
                                </div>
                                <small class="text-muted">By clicking the 'Sign Up' button, you confirm that you
                                    accept our <br> Terms of Use and Privacy Policy.</small>
                            </article>
                            <div class="border-top card-body text-center">
                                Have an account? 
                                <!-- TODO - This link will be changed to attend a new Controller. -->
                                <a asp-controller="Home" asp-action="Login">Log In</a>
                            </div>
                        </div>
                    </div>
                </aside>
            </div>
        </section>
    </main>
</form>