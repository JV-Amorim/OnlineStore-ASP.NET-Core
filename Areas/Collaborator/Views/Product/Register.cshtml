@model Product
@{
    ViewData["Title"] = "Product Registration";
}

<h1 style="margin-top: 20px;">Product Registration</h1>

@if(TempData["MSG_OK"] != null)
{
    <p class="alert alert-success">@Html.Raw(TempData["MSG_OK"])</p>
}

<form method="post">
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control">
            <option value="">Select</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Type the product name...">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UnitPrice"></label>
        <div class="input-group mb-2">
            <div class="input-group-prepend">
                <div class="input-group-text">R$</div>
            </div>
            <input asp-for="UnitPrice" class="form-control" placeholder="Type the product price...">
        </div>
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UnitsInStock"></label>
        <div class="input-group mb-2">
            <input asp-for="UnitsInStock" class="form-control" placeholder="Type the amount of product units in stock...">
            <div class="input-group-append">
                <div class="input-group-text">Units</div>
            </div>
        </div>
        <span asp-validation-for="UnitsInStock" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Weight"></label>
        <div class="input-group mb-2">
            <input asp-for="Weight" class="form-control">
            <div class="input-group-append">
                <div class="input-group-text">kg</div>
            </div>
        </div>
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Width"></label>
        <div class="input-group mb-2">
            <input asp-for="Width" class="form-control">
            <div class="input-group-append">
                <div class="input-group-text">cm</div>
            </div>
        </div>
        <span asp-validation-for="Width" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Height"></label>
        <div class="input-group mb-2">
            <input asp-for="Height" class="form-control">
            <div class="input-group-append">
                <div class="input-group-text">cm</div>
            </div>
        </div>
        <span asp-validation-for="Height" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Length"></label>
        <div class="input-group mb-2">
            <input asp-for="Length" class="form-control">
            <div class="input-group-append">
                <div class="input-group-text">cm</div>
            </div>
        </div>
        <span asp-validation-for="Length" class="text-danger"></span>
    </div>

    <div class="row images">
        @for (int i = 0; i < 12; i++)
        {
            <div class="col-md-3">
                <img src="~/img/default-image.png" class="img-thumbnail">
                <a class="btn btn-danger btn-custom">
                    <span data-feather="trash" style="color: #FFF;"></span>
                </a>
            </div>
        }
    </div>

    <div>
        <a asp-action="Index">Return</a>
        <button type="submit" class="btn btn-primary" style="float: right;">
            Submit
        </button>
    </div>
</form>