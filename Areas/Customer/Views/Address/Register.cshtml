@model Address
@{
    ViewData["Title"] = "Online Store - Address";
}

<main role="main">
    <section class="container" style="margin-top: 50px">
        <div class="row">
            <aside class="col-md-6">
                <div class="card">
                    <div class="address-header">
                        <h4 class="card-title mt-2">Add New Address</h4>
                    </div>
                    <article class="card-body">
                        <form method="post">
                            <div class="form-row">
                                <div class="col form-group">
                                    <label asp-for="Cep"></label>
                                    <input asp-for="Cep" id="cep" class="form-control cep-input" type="text">
                                    <span asp-validation-for="Cep"></span>
                                </div>
                                <div class="col form-group">
                                    <label asp-for="City"></label>
                                    <input asp-for="City" id="city" class="form-control" type="text">
                                    <span asp-validation-for="City"></span>
                                </div>
                                <div class="col form-group">
                                    <label asp-for="State"></label>
                                    <input asp-for="State" id="state" class="form-control" type="text">
                                    <span asp-validation-for="State"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col form-group">
                                    <label asp-for="AddressLine"></label>
                                    <input asp-for="AddressLine" id="address-line" class="form-control" type="text">
                                    <span asp-validation-for="AddressLine"></span>
                                </div>
                                <div class="col form-group">
                                    <label asp-for="Neighborhood"></label>
                                    <input asp-for="Neighborhood" id="neighborhood" class="form-control" type="text">
                                    <span asp-validation-for="Neighborhood"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col form-group">
                                    <label asp-for="Number"></label>
                                    <input asp-for="Number" id="number" class="form-control" type="text">
                                    <span asp-validation-for="Number"></span>
                                </div>
                                <div class="col form-group">
                                    <label asp-for="Complement"></label>
                                    <input asp-for="Complement" id="complement" class="form-control" type="text">
                                    <span asp-validation-for="Complement"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" id="save-button" class="btn btn-primary btn-block">
                                    Save
                                </button>
                            </div>
                        </form>
                    </article>
                </div>
            </aside>
        </div>
    </section>
</main>

<script>
    document.getElementById('save-button').onclick = () => {
        const cepInputField = document.getElementById('cep');
        cepInputField.classList.remove('cep-input');
        cepInputField.value = cepInputField.value.replace('.', '').replace('-', '');
    };
</script>