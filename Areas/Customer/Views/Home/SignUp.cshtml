@model Customer
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <main role="main">
        <section class="container" style="margin-top: 50px">
            <div class="row">
                <aside class="col-md-6">
                    <div id="code_register_1">
                        <div class="card">
                            <header class="card-header">
                                <a asp-controller="Home" asp-action="Login" class="float-right btn btn-outline-primary mt-1">
                                    Log in
                                </a>
                                <h4 class="card-title mt-2">Sign Up</h4>
                            </header>
                            <article class="card-body">
                                @if(TempData["MSG_OK"] != null)
                                {
                                    <p class="alert alert-success">@Html.Raw(TempData["MSG_OK"])</p>
                                }
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="Name"></label>
                                        <input type="text" asp-for="Name" class="form-control" placeholder="">
                                        <span asp-validation-for="Name"></span>
                                    </div>
                                    <div class="col form-group">
                                        <label asp-for="DateOfBirth"></label>
                                        <input type="date" asp-for="DateOfBirth" class="form-control" placeholder="">
                                        <span asp-validation-for="DateOfBirth"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Sex" value="M">
                                        <span class="form-check-label"> Male </span>
                                    </label>
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Sex" value="F">
                                        <span class="form-check-label"> Female</span>
                                    </label>
                                    <span asp-validation-for="Sex"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CPF"></label>
                                    <input type="text" asp-for="CPF" class="form-control cpf-input-field" placeholder="">
                                    <span asp-validation-for="CPF"></span>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="Phone"></label>
                                        <input type="text" asp-for="Phone" class="form-control phone-input-field">
                                        <span asp-validation-for="Phone"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email"></label>
                                    <input type="email" asp-for="Email" class="form-control" placeholder="">
                                    <span asp-validation-for="Email"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <input asp-for="Password" class="form-control" type="password">
                                    <span asp-validation-for="Password"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PasswordConfirmation"></label>
                                    <input asp-for="PasswordConfirmation" class="form-control" type="password">
                                    <span asp-validation-for="PasswordConfirmation"></span>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block"> Sign Up </button>
                                </div>
                                <small class="text-muted">By clicking the 'Sign Up' button, you confirm that you
                                    accept our <br> Terms of Use and Privacy Policy.</small>
                            </article>
                            <div class="border-top card-body text-center">
                                Have an account? 
                                <a asp-controller="Home" asp-action="Login">Log In</a>
                            </div>
                        </div>
                    </div>
                </aside>
                <aside class="col-md-6">
                    <div class="card">
                        <div class="address-header">
                            <h4 class="card-title mt-2">Address</h4>
                            <small>You can also register your address later.</small>
                        </div>
                        <article class="card-body">
                            <div class="form-row">
                                <div class="col form-group">
                                    <label for="cep">CEP *</label>
                                    <input type="text" id="cep" name="cep" class="form-control cep-input" placeholder="">
                                </div>
                                <div class="col form-group">
                                    <label for="city">City *</label>
                                    <input type="text" id="city" name="city" class="form-control" placeholder="">
                                </div>
                                <div class="col form-group">
                                    <label for="state">State *</label>
                                    <input type="text" id="state" name="state" class="form-control" placeholder="">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col form-group">
                                    <label for="address-line">Address *</label>
                                    <input type="text" id="address-line" name="address-line" class="form-control" placeholder="">
                                </div>
                                <div class="col form-group">
                                    <label for="neighborhood">Neighborhood *</label>
                                    <input type="text" id="neighborhood" name="neighborhood" class="form-control" placeholder="">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col form-group">
                                    <label for="number">Number *</label>
                                    <input type="text" id="number" name="number" class="form-control" placeholder="">
                                </div>
                                <div class="col form-group">
                                    <label for="complement">Complement</label>
                                    <input type="text" id="complement" name="complement" class="form-control" placeholder="">
                                </div>
                            </div>
                            <small>The fields with * are required.</small>
                            <div class="form-group address-button-div">
                                <p id="address-validation-error">
                                    Make sure all required fields are filled in correctly.
                                </p>
                                <button id="save-address-button" type="button" class="btn btn-primary">
                                    Save
                                </button>
                                <input id="address-save-status" name="address-save-status" type="hidden" value="false">
                            </div>
                        </article>
                    </div>
                </aside>
            </div>
        </section>
    </main>
</form>